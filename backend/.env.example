# Environment variables template
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=healthcare_db
DB_USER=root
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-secret-key-here-make-it-long-and-secure-at-least-256-bits-change-this-in-production
JWT_EXPIRATION=86400000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Model
OPENAI_MODEL=gpt-4

# Tesseract OCR Path (Windows)
TESSERACT_DATA_PATH=C:/Program Files/Tesseract-OCR/tessdata

# Tesseract OCR Path (Linux/Mac)
# TESSERACT_DATA_PATH=/usr/share/tesseract-ocr/4.00/tessdata

# File Upload Configuration
UPLOAD_DIRECTORY=uploads/
MAX_FILE_SIZE=10MB

# Server Configuration
SERVER_PORT=8080

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Application Environment
APP_ENV=development
